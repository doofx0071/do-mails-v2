# PRODUCTION ENVIRONMENT VARIABLES
# Copy this file to .env.production and replace all placeholder values with your actual production values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Mailgun Configuration
MAILGUN_DOMAIN=your_mailgun_domain_here
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_WEBHOOK_SIGNING_KEY=your_mailgun_webhook_signing_key_here
MAILGUN_BASE_URL=https://api.mailgun.net

# Application Configuration - UPDATE THESE FOR PRODUCTION
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://YOUR-PRODUCTION-DOMAIN.com
APP_BASE_URL=https://YOUR-PRODUCTION-DOMAIN.com

# Production Environment
NODE_ENV=production

# DEPLOYMENT INSTRUCTIONS:
# 1. Replace YOUR-PRODUCTION-DOMAIN.com with your actual deployed URL
# 2. For Vercel: Use the URL Vercel provides (e.g., https://do-mails-v2-xyz.vercel.app)
# 3. For Netlify: Use the URL Netlify provides (e.g., https://amazing-app-xyz.netlify.app)
# 4. For custom domain: Use your custom domain (e.g., https://yourdomain.com)
#
# WEBHOOK URL WILL BE: https://YOUR-PRODUCTION-DOMAIN.com/api/webhooks/mailgun
